{% extends "layout.njk" %}
{% block content %}

<main>
    <form action="/shitter/user/login" method="post">
        <div class="textblock">
            <h2>Log in</h2>
                <label for="username">Username</label>
                <input type="text", name="username" value="{{previous_username}}" required><br>

                <label for="password">Password</label>
                <input type="password", name="password" required><br>

            <button type="submit">Login</button>
        </div>
    </form>
</main>

{% endblock %}